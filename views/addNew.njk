{% extends 'layout.njk' %}

{% block pageTitle %}
    <title>Add a book | My Library</title>
{% endblock %}

{% block content %}
<section class='hero'>
    <a href='/' class='navButton' role="button"><</a>
    <div class='hero__title'>
        <h1>Add a book.</h1>
    </div>
</section>
<main class='mainContent'>
    <form action='/add-new/submit' method='post'>
        <div class="form-group">
        <label class="label" for="title">
            Title
        </label>
        <input class="form-input" id="title" name="title" type="text">
        </div>
        <div class="form-group">
        <label class="label" for="author">
            Author
        </label>
        <input class="form-input" id="author" name="author" type="text">
        </div>

        <button type='submit' class='submit-button'>Submit</button>
    </form>
</main>
{% endblock %}