{% extends 'layout.njk' %}

{% block pageTitle %}
    <title>{{ book.title }}</title>
{% endblock %}

{% block content %}
<section class='hero'>
        <a href='/add-new' class='navButton' role="button">+</a>
    <div class='hero__title'>
        <h1>Library.</h1>
    </div>
</section>
<main class='mainContent'>
    <ul class='mainContent__list'>
    {% for book in books %}
        <li class='mainContent__list mainContent__list--title'><a href='/info/{{ book.id }}'>{{ book.title }}</a></li>
        <p class='mainContent__list mainContent__list--author'>{{ book.author }}</p>
    {% endfor %}
    </ul>
</main>
<section class='pagination-container'>
    <div class='pagination'>
    {% if page == 1 %}
        <p class={% if page > 1 %} 'pagination-arrows' {% else %} 'pagination-arrows pagination-arrows__disabled' {% endif %}><<</p>
    {% else %}
        <a href='?p={{ page - 1 }}' class={% if page > 1 %} 'pagination-arrows' {% else %} 'pagination-arrows pagination-arrows__disabled' {% endif %}><<</a>
    {% endif %}
        <p class='pagination-page'>{{ page }}</p>
    {% if lastPage != true %}
        <a href='?p={{ page + 1 }}' class={% if lastPage != true %} 'pagination-arrows' {% else %} 'pagination-arrows pagination-arrows__disabled' {% endif %}>>></a>
    {% else %}
        <p class={% if lastPage != true %} 'pagination-arrows' {% else %} 'pagination-arrows pagination-arrows__disabled' {% endif %}>>></p>
    {% endif %}
    </div>
</section>
{% endblock %}
